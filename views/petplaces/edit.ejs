<% layout('layouts/boilerplate') %>
<div class="row">
	<h1 class="text-center">Редактировать информацию</h1>
	<div class="col-6 offset-3">
		<form action="/Petplaces/<%= petplace._id %>?_method=PUT " method="POST" class="validatedform" novalidate enctype="multipart/form-data">
			<div class="mb-3">
				<label class="form-label" for="title">Имя</label>
				<input class="form-control" type="text" name="petplace[title]" id="title" value="<%= petplace.title %>" required />
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="location">Местонахождение</label>
				<input class="form-control" type="text" name="petplace[location]" id="location" value="<%= petplace.location %>" required />
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="price">Цена</label>
				<div class="input-group">
					<span class="input-group-text" id="price-label">₽</span>
					<input
						type="text"
						class="form-control"
						placeholder="0.00"
						aria-label="price"
						aria-describedby="price-label"
						id="price"
						name="petplace[price]"
						value="<%= petplace.price %>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			<div class="mb-3">
				<label class="form-label" for="category">Телефон</label>
				<div class="input-group">
					<input
						type="text"
						class="form-control"
						placeholder="0.00"
						aria-label="phone"
						aria-describedby="phone-label"
						id="phone"
						name="petplace[phone]"
						value="<%= petplace.phone %>"
						required
					/>
					<div class="valid-feedback">Looks good!</div>
				</div>
			<div class="mb-3">
				<label class="form-label" for="category">Категория</label>
                    <select class="form-select" aria-label="Default select example" name="petplace[category]" id="category"> 
                        <option selected value="Специальность не выбрана">Выберите специальность</option>
                        <option value="Зооняня">Зооняня</option>
                        <option value="Садик для животных">Садик для животных</option>
                        <option value="Грумер">Грумер</option>
                        <option value="Кинолог">Кинолог</option>
                        <option value="Передержка">Передержка</option>
                    </select>
				</div>
			</div>
			<div class="mb-3">
				<label class="form-label" for="description">Описание</label>
				<textarea class="form-control" type="text" name="petplace[description]" id="description" required><%= petplace.description %> </textarea>
				<div class="valid-feedback">Looks good!</div>
			</div>
			<div class="mb-3">
				<label for="image" class="form-label">Добавить изображения</label>
				<input class="form-control" type="file" id="image" name="image" multiple />
			</div>
			<div class="mb-3">
				<% petplace.images.forEach(function(image, i){ %>
					<img src="<%= image.thumbnail %>" class="img-thumbnail" alt="">
					<div class="form-check-inline">
						<input type="checkbox" name="deleteImages[]" id="<%= i %>" value="<%= image.filename %>">
					</div>
					<label for="<%= i %>">Удалить?</label>
				<% }) %>  
			</div>
			<div class="mb-3">
				<button class="btn btn-info">Обновить</button>
			</div>
		</form>
		<a class="btn btn-warning" href="/petplace/<%= petplace._id %> ">Назад</a>
	</div>
</div>
